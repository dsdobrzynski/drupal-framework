#!/usr/bin/env php
<?php

  if(!file_exists('cnf/config.yml')) {
    copy('cnf/config.yml.dist', 'cnf/config.yml');
    echo "File config.yml copied to cnf directory\n\n";
  }
  $path = __DIR__ . "/../";
  echo "Setting permissions of sites/default directory.";
  chmod('www/sites/default', 0755);
  echo "Compiling Settings File.";
  exec($path . "vendor/bin/settings_compile cnf/config.yml www/sites/default/settings.php");
